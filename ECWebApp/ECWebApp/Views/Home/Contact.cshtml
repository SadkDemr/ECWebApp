                        <button type="submit" class="btn btn-default btn-sm"><i class="fa fa-map-marker fa-fw"></i> View Map</button>
                        <div class="space20"></div>
                    </div>

                    <div class="col-md-3">
                        <h4><b>AUSTRALIA</b></h4>
                        <p><i class="fa fa-map-marker fa-fw"></i> 379 5th Ave, Melbourne, 58745</p>
                        <p><i class="fa fa-phone fa-fw"></i> +(112) 345 6879</p>
                        <p><i class="fa fa-envelope fa-fw"></i> hello@example.com</p>
                        <button type="submit" class="btn btn-default btn-sm"><i class="fa fa-map-marker fa-fw"></i> View Map</button>
