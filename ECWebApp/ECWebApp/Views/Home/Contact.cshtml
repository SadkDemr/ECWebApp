@model ContactModel
@{
    ViewData["Title"] = "Contact";
}
<section id="content">

    <div class="container">

        <div class="row">

            <div class="col-xs-12 text-center padding25">
                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur eget leo at velit imperdiet varius. In eu ipsum vitae velit congue iaculis vitae at risus. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>


            <div class="col-md-6">
                <div class="padding25">
                    <h4>SEND A <b>MESSAGE</b></h4>
                </div>

                <h1>@ViewBag.Message</h1>
                <form>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="@Model.Name"></label>
                            <input type="text" asp-for="@Model.Name" class="form-control input-lg" placeholder="Your Name*" required="">
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>

                        <div class="form-group col-xs-12">
                            <label asp-for="@Model.Subject"></label>
                            <input type="text" asp-for="@Model.Subject" class="form-control input-lg" placeholder="Subject">
                            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                        </div>

                        <div class="form-group col-xs-12">
                            <label asp-for="@Model.Message"></label>
                            <textarea class="form-control" asp-for="@Model.Message" rows="12" placeholder="Your Message*" required=""></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Message"></span>
                        </div>

                        <div class="form-group col-xs-12 text-left">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-send fa-fw"></i> SEND EMAIL</button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="col-md-6">
                <div class="padding25">
                    <h4>VISIT <b>US</b></h4>
                </div>

                <section id="full-map" class="container-fluid map-container">
